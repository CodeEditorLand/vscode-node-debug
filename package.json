							},
							"showAsyncStacks": {
								"default": true,
								"description": "%node.showAsyncStacks.description%",
								"type": "boolean"
							},
							"skipFiles": {
								"default": [],
								"items": {
									"type": "string"
								},
								"markdownDescription": "%skipFiles.description%",
								"type": "array"
							},
							"smartStep": {
								"default": true,
								"description": "%smartStep.description%",
								"type": "boolean"
							},
