								},
								"default": {},
								"markdownDescription": "%node.launch.env.description%",
								"type": "object"
							},
							"envFile": {
								"default": "${workspaceFolder}/.env",
								"description": "%node.launch.envFile.description%",
								"type": "string"
							},
							"externalConsole": {
								"default": true,
								"deprecationMessage": "%node.launch.externalConsole.deprecationMessage%",
